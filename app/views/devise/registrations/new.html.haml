.container.py-5
  .row.justify-content-center
    .col-md-6.col-lg-5
      .card.border-0.shadow.rounded-4
        .card-body.p-4.p-sm-5
          .text-center.mb-4
            %h3.fw-bold.text-primary Sign Up
            %p.text-muted.small Create your account

          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.error_notification

            .form-inputs
              -# Email input fields
              = f.input :email,                                              |
                required: true,                                              |
                autofocus: true,                                             |
                input_html: { autocomplete: "email" },                       |
                label: "Email Address",                                      |
                wrapper_html: { class: "mb-3" }                              |

              -# Password input fields
              = f.input :password,                                                                                  |
                required: true,                                                                                     |
                label: "Password",                                                                                  |
                hint: ("Please enter at least #{@minimum_password_length} characters" if @minimum_password_length), |
                input_html: { autocomplete: "new-password" },                                                       |
                wrapper_html: { class: "mb-3" }                                                                     |

              -# Password confirmation input fields
              = f.input :password_confirmation,                              |
                required: true,                                              |
                label: "Password confirmation",                              |
                input_html: { autocomplete: "new-password" },                |
                wrapper_html: { class: "mb-4" }                              |

            .form-actions.d-grid.mb-3
              = f.button :submit, "Sign up", class: "btn btn-primary btn-lg rounded-pill fw-bold"

          .text-center.small
            = render "devise/shared/links"
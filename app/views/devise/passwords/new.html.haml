.container.py-5
  .row.justify-content-center
    .col-md-6.col-lg-5
      .card.border-0.shadow.rounded-4
        .card-body.p-4.p-sm-5
          .text-center.mb-4
            %i.bi.bi-key.text-primary.display-4.mb-3
            %h3.fw-bold.text-primary Reset Your Password
            %p.text-muted.small Enter your email address below and we'll send you instructions to reset your password.

          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = f.error_notification

            .form-inputs
              = f.input :email,                                              |
                required: true,                                              |
                autofocus: true,                                             |
                label: "Email Address",                                      |
                input_html: { autocomplete: "email" },                       |
                wrapper_html: { class: "mb-4" }                              |

            .form-actions.d-grid.mb-3
              = f.button :submit, "Send Reset Instructions", class: "btn btn-primary btn-lg rounded-pill fw-bold"

          .text-center.small
            = render "devise/shared/links"

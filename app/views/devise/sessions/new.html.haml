.container.py-5
  .row.justify-content-center
    .col-md-6.col-lg-5
      .card.border-0.shadow.rounded-4
        .card-body.p-4.p-sm-5
          .text-center.mb-4
            %h3.fw-bold.text-primary Welcome Back!
            %p.text-muted.small Log in to your account

          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-inputs
              -# Email input field
              = f.input :email,                                              |
                required: false,                                             |
                autofocus: true,                                             |
                input_html: { autocomplete: "email" },                       |
                label: "Email Address",                                      |
                wrapper_html: { class: "mb-3" }                              |

              -# Password input field
              = f.input :password,                                           |
                required: false,                                             |
                input_html: { autocomplete: "current-password" },            |
                label: "Password",                                           |
                wrapper_html: { class: "mb-3" }                              |

              -# Remember me checkbox
              - if devise_mapping.rememberable?
                = f.input :remember_me,                                      |
                  as: :boolean,                                              |
                  label: "Keep me logged in",                                |
                  wrapper_html: { class: "mb-4" }                            |

            .form-actions.d-grid.mb-3
              = f.button :submit, "Log in", class: "btn btn-primary btn-lg rounded-pill fw-bold"
          .text-center.small
            = render "devise/shared/links"